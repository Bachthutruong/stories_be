{
  "name": "stories-post-backend",
  "version": "1.0.0",
  "description": "Backend for Stories Post application",
  "main": "index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon src/index.ts",
    "build": "rm -rf dist && tsc",
    "build:check": "npm run build && ls -la dist/",
    "postinstall": "npm run build",
    "seed": "node src/seed-data.js",
    "prestart": "npm run build",
    "render-start": "npm run build && node dist/index.js",
    "render-build": "npm install && npm run build",
    "verify": "node -e \"console.log('Node.js version:', process.version); console.log('Current directory:', process.cwd()); console.log('Files in dist:', require('fs').readdirSync('./dist'));\"",
    "render-deploy": "npm run build && node dist/index.js",
    "render": "node index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.0.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.5.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
